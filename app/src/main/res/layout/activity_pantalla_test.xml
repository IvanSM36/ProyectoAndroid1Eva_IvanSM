                        android:id="@+id/radioBtnNimbus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nimbus 2000"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                    <RadioButton
                        android:id="@+id/radioBtnCometa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cometa"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
