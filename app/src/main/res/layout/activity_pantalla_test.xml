                    android:id="@+id/txt1Pregunta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="1º Pregunta: "
                    android:textSize="20dp"
                    android:textStyle="bold" />

