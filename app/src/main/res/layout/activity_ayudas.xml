<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ayudas">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/escudo" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B3000000"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.060000002">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Ayudas"
            android:textColor="@color/white"
            android:textSize="35dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="310dp"
        android:layout_height="400dp"
        android:background="#B3000000"
        android:padding="30dp"
        android:text="Mi moto alpina de repente\nMi moto alpina de repente\nMi moto alpina de repente\nMa mata alpana darrapanta\nMa mata alpana darrapanta\nMa mata alpana darrapanta\nMo moto olpono dorroponto\nMo moto olpono dorroponto\nMo moto olpono dorroponto\nMu mutu ul punu durrupuntu\nMu mutu ul punu durrupuntu\nMu mutu ul punu durrupuntu\nMe ......... el ......... derrepente\n\nSe me puerta la cierra\ntodo me male sal por que\nse me lengua la traba\nMariguenisen la legaliguana\n\nNo es lo mismo una pompa\nde primavera que prima ponte\nen pompa que voy de vera\n\n  "
        android:textSize="18dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/btnInicio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />
    <Button

        android:id="@+id/btnInicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inicio"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.914" />



</androidx.constraintlayout.widget.ConstraintLayout>